/'* \file girtobac_text.bi
\brief Header with informations on the executable and help and version texts

This file contains some informational texts for the user interface,
namely the version and help texts.

'/

#IFDEF __FB_UNIX__
 '* The new line charater[s]
 #DEFINE NL !"\n" &
 '* The target operation system
 #DEFINE TARGET "UNIX"
#ELSE
'&/* Doxygen shouldn't see this
 #DEFINE NL !"\r\n" &
 #DEFINE TARGET "DOS/windows"
'&*/
#ENDIF

'* The welcome message
#DEFINE MSG_WELCOME _
  "  @PROJ_NAME@-@PROJ_VERS@, License @PROJ_LICE@" & NL  _
  "  Copyright (C) 2015-@PROJ_YEAR@ by @PROJ_MAIL@"

'* Compiler information
#DEFINE MSG_COMPILE _
  "  Compiled: " & __DATE__ & ", " & __TIME__ & " with " & __FB_SIGNATURE__ & " for " & TARGET

'* The info text about the current version
#DEFINE VERSION_TEXT _
  MSG_WELCOME & NL MSG_COMPILE
